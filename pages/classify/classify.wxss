.main{
  width: 100%;
  height: 100%;
  position: fixed;
  background: #F7F9FC;
  display: flex;
  flex-direction: column;
}

.top{
  width: 640rpx;
  height: 60rpx;
  margin-left: 60rpx;
  margin-top: 30rpx;
  border-radius: 40rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: row;
}
.top_img{
  width: 36rpx;
  height: 36rpx;
  margin-top: 12rpx;
  margin-left: 240rpx;
}
.top_txt{
  width: 56rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #797E8B;
}

.content{
  width: 100%;
  height: 960rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}
.content_left{
  width: 200rpx;
}
.on{
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color:#434343;
  background: #FFFFFF;
}
.off{
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color:#AEAEAE;
  background-color:#F6F6F6;
}
.content_right{
  width: 560rpx;
  background: #FFFFFF;
}
.content_right_item{
  width: 150rpx;
  height: 200rrpx;
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  margin-top: 60rpx;
}
.content_right_item_img{
  width: 150rpx;
  height: 140rpx;
  border-radius: 16rpx;
}
.content_right_item_txt{
  width: 150rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #797E8B;
}




::-webkit-scrollbar{
  width: 0rpx;
  height: 0rpx;
  background: transparent;
}