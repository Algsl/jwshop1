.main{
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  background:#FFFFFF; 
}
.content{
  width: 100%;
  height: 60px;
  display: flex;
  flex-direction: row;
  background: #F7F9FC;
}
.content_view{
  width: 70%;
  height: 30px;
  margin:15px 20px;
  display: flex;
  flex-direction: row;
  font-size: 14px;
  color: #2B375E;
  border-radius: 4px;
  background: #FFFFFF;
}
.content_view_img{
  width: 20px;
  height: 20px;
  margin: 5px;
}
.content_view_input{
  width: 200px;
  height: 30px;
  line-height: 30px;
}
.content_view_btn{
  width: 40rpx;
  height:20rpx;
  text-align: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  background: #1EC996;
}

.over{
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 16px;
  color: #202437;
  background: #FFFFFF;
}

.item{
  width: 660rpx;
  height: 180rpx;
  margin-left: 45rpx;
  margin-top: 20rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: row;
  background: #F7F9FC;
}
.item_img{
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  border-radius: 16rpx;
}
.item_title{
  width: 300rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #797E8B;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.item_collect{
  width: 200rpx;
  height: 36rpx;
  line-height: 36rpx;
  margin-left: 20rpx;
  margin-top: 32rpx;
  font-size: 24rpx;
  color: #A0A3AF;
}
.item_price{
  width: 200rpx;
  height: 36rpx;
  line-height: 36rpx;
  margin-left: 20rpx;
  margin-top: 44rpx;
  font-size: 28rpx;
  color: #F0454C;
}